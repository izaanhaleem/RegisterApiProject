<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ladyhealth1"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/margin_normal">
        <!--<include-->
        <!--android:id="@+id/tool_bar"-->
        <!--layout="@layout/toolbar_layout" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_xxxlarge"
            android:layout_marginRight="@dimen/margin_xxxlarge"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                app:hintTextAppearance="@style/NormalTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLoginUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="صارف نام"
                    android:inputType="text"
                    android:textDirection="anyRtl"
                   />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                app:hintTextAppearance="@style/NormalTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="پاس ورڈ"
                    android:inputType="textPassword"
                     />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLogin"
                style="@style/ButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@drawable/button_selector"
                android:text="لاگ ان کریں"

                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvForgotPassword"
                style="@style/LargeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/forgot_password"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCreateAccount"
                style="@style/LargeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/create_new_account" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>